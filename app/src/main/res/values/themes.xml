<resources>
    <style name="Theme.PetFinder" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/lavender</item>
        <item name="colorPrimaryVariant">@color/lavender_dark</item>
        <item name="colorOnPrimary">@color/light_green</item>
        <item name="colorSecondary">@color/green</item>
        <item name="colorOnSecondary">@color/dark_purple</item>
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>

        <item name="android:textColorPrimary">@color/dark_purple</item>
        <item name="android:textColorSecondary">@color/dark_purple</item>

        <item name="materialButtonOutlinedStyle">@style/Widget.App.Button.OutlinedButton.Icon</item>
        <item name="materialButtonStyle">@style/Widget.MaterialComponents.Button.TextButton</item>
    </style>

    <style name="Widget.App.Button.OutlinedButton.Icon" parent="Widget.MaterialComponents.Button.OutlinedButton.Icon">
        <item name="iconSize">@dimen/grid_3x</item>
    </style>
</resources>
